.map-container {
  background: linear-gradient(180deg, #e8f4fc 0%, #ffffff 100%);
  border-radius: 24rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.1);
}
.map {
  width: 100%;
  height: 650rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #e0f0fa;
}
.stats {
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.08);
  border: 1rpx solid #e8f4fc;
}
.stats-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3a8a;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e8f4fc;
}
.stats-list {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
.stats-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}
.stats-item:hover {
  background-color: #f0f7ff;
}
.stats-city {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #334155;
  font-size: 28rpx;
}
.stats-city::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
  border-radius: 50%;
}
.stats-count {
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
  color: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}
