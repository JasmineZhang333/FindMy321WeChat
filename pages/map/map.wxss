.map-wrapper {
  position: relative;
}
.map-container {
  position: relative;
  background: linear-gradient(180deg, #e8f4fc 0%, #ffffff 100%);
  border-radius: 24rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.1);
}
.map {
  width: 100%;
  height: 650rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #e0f0fa;
}
.location-btn {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(59, 130, 246, 0.4);
  transition: all 0.2s;
}
.location-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(59, 130, 246, 0.3);
}
.location-icon {
  font-size: 40rpx;
}
.stats {
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.08);
  border: 1rpx solid #e8f4fc;
}
.stats-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3a8a;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e8f4fc;
}
.stats-summary {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #e0f0ff, #f0f7ff);
  border-radius: 16rpx;
  border: 1rpx solid #bfdbfe;
}
.summary-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e3a8a;
}
.stats-list {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
.stats-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}
.stats-item:hover {
  background-color: #f0f7ff;
}
.stats-city {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #334155;
  font-size: 28rpx;
}
.stats-city::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
  border-radius: 50%;
}
.stats-count {
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
  color: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}
.popup {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  z-index: 1001;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.2);
}
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, #3b82f6, #60a5fa);
}
.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}
.popup-close {
  font-size: 48rpx;
  color: #ffffff;
  line-height: 1;
  opacity: 0.8;
}
.popup-body {
  padding: 24rpx 32rpx 32rpx;
}
.popup-count {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 20rpx;
  text-align: center;
}
.popup-names {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: flex-start;
}
.name-tag {
  background: linear-gradient(135deg, #e0f0ff, #f0f7ff);
  color: #1e3a8a;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1rpx solid #bfdbfe;
}
